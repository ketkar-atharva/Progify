<%layout("/layouts/boilerplate")-%>
<body>
    <h2>Edit Task</h2>
    <form method="post" action="/update/<%=edittask._id%>?_method=PUT">
        <div>
            <label for="title" class="form-label">Title:</label>
            <input name="tasks[title]" value=<%=edittask.title%> type="text" required class="form-control"><br>
        </div>
        <div>
            <label for="description" class="form-label">Description:</label>
            <textarea name="tasks[description]" value=<%=edittask.description%>  type="text" required class="form-control"></textarea><br>
        </div>
        <div>
            <label for="img" class="form-label">Background-Image:</label>
            <input name="tasks[img]" placeholder="enter link" type="text"  class="form-control">
        </div>
          <br>
          <br>
          <button type="button" class="btn btn-primary">Edit</button>
    </form>
    
</body>
