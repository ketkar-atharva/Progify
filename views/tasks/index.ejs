<%layout("/layouts/boilerplate")-%>
<body>
    <h1>All tasks</h1><br>
  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
    <% for(let task of alltasks){ %>

    <a href="/tasks/<%=task._id%>"  style="text-decoration: none;">
        <div class="card col" style="width: 18rem;">
        <img src=<%=task.img%> class="card-img-top" alt="...">
           <div class="card-body">
            <p class="card-text" style="font-size: large;"><b><%=task.title%></b></p>
            <p class="card-text"><i><%=task.description%></i></p>
          </div>
        </div>
    </a>
    
     <%}%>

  </div>


</body>

